pipeline {
    agent any
    stages {
        stage('Test') {
            agent { docker 'node:18-alpine3.16' }
            steps {
                sh 'npm install'
                sh 'npm test'
            }
            post {
                always {
                    archiveArtifacts artifacts: 'coverage/', followSymlinks: false
                }
            }
        }
        stage('Package'){
            steps{
                sh 'docker build -t at20_graphql .'
            }
        }
    }
}