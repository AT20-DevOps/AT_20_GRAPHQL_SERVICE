pipeline {
    agent any
    stages {
        stage('Test') {
            agent { docker 'node:18-alpine3.16' }
            steps {
                sh 'npm install'
                sh 'npm test'
            }
            post {
                always {
                    archiveArtifacts artifacts: 'coverage/', followSymlinks: false
                }
            }
        }
        stage('Package'){
            docker build -t AT_20_GRAPHQL_SERVICE .
        }
        stage('Publish'){

        }
    }
}