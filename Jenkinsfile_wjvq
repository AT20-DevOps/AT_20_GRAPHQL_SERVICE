pipeline {
    agent any
    stages {
        stage('Test') {
            agent {
                docker {
                    image 'node:18-alpine3.16'
                }
            }
            steps {
                sh 'npm install'
                sh 'npm test'
            }
            post {
                always {
                    archiveArtifacts artifacts: 'tests/report.html, test/jest-html-reporters-attach/*', followSymlinks: false
                }
            }
        }
    }
}