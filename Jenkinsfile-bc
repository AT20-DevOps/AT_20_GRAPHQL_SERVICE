pipeline {
    agent any
    environment {
        DOCKER_PASS = credentials('docker_pass')
    }
    stages {
        stage ('Test') {
            agent { docker 'node:18-alpine3.16' }
            steps {
                sh 'npm install'
                sh 'npm run test tests/'
                    }
            post {
                always {
                    archiveArtifacts artifacts: 'jest-stare/', followSymlinks: false
                        }
                    }
                }
            }
        }
