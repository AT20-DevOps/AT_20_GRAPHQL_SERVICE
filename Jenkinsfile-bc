pipeline {
    agent any
    stages {
        stage ('Test') {
            agent { docker 'node:18-alpine3.16' }
            steps {
                sh 'npm install'
                sh 'npm run test tests/'
            }
           
        }
        post {
        
        always {
            echo 'Execute Always message'
        }
        failure {
            echo 'Execute when it fails'
        }
        success {
            echo 'Execute when it success'
        }
    }
        }
    }
